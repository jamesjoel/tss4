<script type="text/javascript" src="/js/category.js"></script>
<div class="container" ng-app="category" ng-controller="ctrl">
	<div class="row">
		<div class="col-md-6 offset-md-3 text-center mt-4">
			<h2>All Categories in sequence</h2>
		</div>
		<div class="dark-box"></div>
	</div>

	<button class="btn btn-info text-center" data-target="#addCate" data-toggle="modal" ng-click="addCate={}">Add New</button>
	<div class="row"  ng-init="getCate()">
		<div class="col-md-8 offset-md-2">
			<table class="table table-dark table-hover table-bordered">
				<tr>
					<th>S.No.</th>
					<th>Name</th>
					<th>Edit</th>
					<th>Delete</th>
				</tr>
				<tr ng-repeat="x in data">
					<td ng-bind="$index+1"></td>
					<td ng-bind="x.name"></td>
					<td><button class="btn btn-info" data-target="#editModal" data-toggle="modal" ng-click="askEdit(x)">Edit</button></td>
					<td><button class="btn btn-danger" ng-click="askDel(x)" data-target="#delModal" data-toggle="modal">Delete</button></td>
				</tr>
			</table>
		</div>
	</div>
	<div id="addCate" class="modal fade">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h4>Category Name</h4>
				</div>
				<div class="modal-body">
					<input type="text" ng-model="addCate.name" class="form-control">
				</div>
				<div class="modal-footer">
					<button class="btn btn-success"  ng-click="add()">Add <span ng-hide="spinner" class="spinner-border spinner-border-sm"></span></button>
				</div>
			</div>
		</div>
	</div>
	<div id="delModal" class="modal fade">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-body">
					<p>Are you sure you want to delete:<b ng-bind="delObj.name"></b></p>
				</div>
				<div class="modal-footer">
					<button class="btn btn-danger" ng-click="del()">Delete</button>
					<button class="btn btn-outline-dark" data-dismiss="modal">Cancel</button>
				</div>
			</div>
		</div>
	</div>
	<div id="editModal" class="modal fade">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h4 class="text-center">Update:<b ng-bind="editObj.name"></b></h4>
				</div>
				<div class="modal-body">
					<input type="text" ng-model="editObj.name" class="form-control">
				</div>
				<div class="modal-footer">
					<button class="btn btn-success" ng-click="edit()">Save</button>
				</div>
			</div>
		</div>
	</div>
</div>