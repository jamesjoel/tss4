<script type="text/javascript" src="/js/product.js"></script>
<script type="text/javascript">
	function add(){
		
	}
</script>
<div class="container" ng-app="product" ng-controller="Ctrl">
	<div class="m-4">
		<button class="btn btn-outline-info form-control" ng-click="add()"><h4><b>Add  New Product</b></h4></button>
	</div>
	<div class="text-center">
		<h4>All Product</h4>
	</div>
	<div class="row" ng-init="getPro()">
		<div class="col-md-10 offset-md-1">
			<table class="table table-dark table-hover table-bordered">
				<tr>
					<th>S.NO.</th>
					<th>Name</th>
					<th>Price</th>
					<th>Detail</th>
					<th>Category</th>
					<th>Discount</th>
					<th>Image</th>
					<th>Edit</th>
					<th>Delete</th>
				</tr>
					<tr ng-repeat="data in data">
						<td ng-bind="$index+1"></td>
						<td ng-bind="data.name"></td>
						<td ng-bind="data.price"></td>
						<td ng-bind="data.detail"></td>
						<td ng-bind="data.category"></td>
						<td ng-bind="data.discount"></td>
						<td ng-bind="data.image"></td>
						<td><button class="btn btn-info" data-toggle="modal" data-target="#editModal" ng-click="askEdit(data)">Edit</button></td>
						<td><button class="btn btn-danger" data-target="#delModal" data-toggle="modal" ng-click="askDel(data)">Delete</button></td>
					</tr>
			</table>
		</div>
	</div>
	<div id="delModal" class="modal fade">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-body">
					<p>Are you sure you want to delete: <b ng-bind="delObj.name"></b>, price: <b ng-bind="delObj.price"></b></p>
				</div>
				<div class="modal-footer">
					<button class="btn btn-danger" ng-click="del()">Delete</button>
					<button class="btn btn-outline-dark" data-dismiss="modal">Cancel</button>
				</div>
			</div>
		</div>
	</div>
	<div class="modal fade" id="editModal">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-body">
					<input type="text" ng-model="editObj.name" class="form-control">
					<input type="text" ng-model="editObj.price" class="form-control">
				</div>
				<div class="modal-footer">
					<button class="btn btn-success" ng-click="edit()">Save</button>
				</div>
			</div>
		</div>
	</div>
</div>