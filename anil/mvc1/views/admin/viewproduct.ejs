<div class="container">
	<div class="text-center">
		<h3>All Product</h3>
	</div>
	<div class="row">
		<div class="col-md-10 offset-md-1">
			<table class="table table-dark table-hover table-bordered">
				<tr>
					<th>S.NO.</th>
					<th>Name</th>
					<th>Price</th>
					<th>Detail</th>
					<th>Category</th>
					<th>Discount</th>
					<th>Image</th>
					<th>Edit</th>
					<th>Delete</th>
				</tr>
				<% result.forEach(function(x, n){ %>
					<tr>
						<td><%= n+1 %></td>
						<td><%= x.name %></td>
						<td><%= x.price %></td>
						<td><%= x.detail %></td>
						<td><%= x.category %></td>
						<td><%= x.discount %></td>
						<td><%= x.image %></td>
						<td><a href="/admin/viewproduct/edit?id=<%= x._id %>" class="btn btn-info">Edit</a></td>
						<td><a href="/admin/viewproduct/delete?id=<%= x._id %>" class="btn btn-danger">Delete</a></td>
					</tr>
			    <% }) %>
			</table>
		</div>
	</div>
</div>