<div class="container mt-4">
	<div class="row">
		<div class="col-md-6 offset-md-3">
			<div class="card">
				<div class="card-header">
					<h4>Update Product</h4>
				</div>
				<form action="/admin/viewproduct/edit" method="post" enctype="multipart/form-data">
					<input type='hidden' name="pid" value="<%= product._id %>" />
				<div class="card-body">
					<div class="form-group">
						<label>Product Name</label>
						<input type="text" placeholder="Product Name" class="form-control" name="name" value="<%= product.name %>">
					</div>
					
					<div class="form-group">
						<label>Product Price</label>
						<input type="text" placeholder="Product Price" class="form-control" name="price" value="<%= product.price %>">
					</div>
					<div class="form-group">
						<label>Product Category</label>
						<select class="form-control" name="category">
							<option>Select</option>
							<% category.forEach(function(x){ 
								if(product.category == x.name)
								{
										%>
											<option selected="selected"><%= x.name %></option>

									<% 
								}
								else
								{
									%>
										<option><%= x.name %></option>

								<% 

								}


						}) %>



						</select>
					</div>
					<div class="form-group">
						<label>Discount</label>
						<input type="text" placeholder="Discount" class="form-control" name="discount" value="<%= product.discount %>">
					</div>
					<div class="form-group">
						<label>Detail</label>
						<textarea class="form-control" placeholder="Detail" name="detail"><%= product.detail %></textarea>
					</div>


					<br />
					<input type="submit" value="Add" class="btn btn-success">
				</div>
				</form>
				
			</div>
		</div>
	</div>
</div>