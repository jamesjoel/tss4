<div class="container">
	<h1>My Cart</h1>
	<div class="row">
		<div class="col-md-10 offset-md-1">
			<div class="card">
				<div class="card-header">
					<h3>Items In Your Cart</h3>
					<a class="btn btn-danger" href="/cart/clear">Clear All</a>
				</div>
				<div class="card-body">
					<table class="table table-hover table-hover table-secondary">
						<tr>
							<th>S.No.</th>
							<th>Product Name</th>
							<th>Image</th>
							<th>Remove</th>
							<th>Price</th>
						</tr>
						<% p_total=0;
						result.forEach(function(x, n){ 
						p_total += parseInt(x.price);
						%>
						<tr>
							<td><%= n+1 %></td>
							<td><%= x.name %></td>
							<td></td>
							<td><a href="#"><i class="fa fa-remove"></i></a></td>
							<td><%= x.price %></td>
						</tr>

						<% }) %>
						<tr>
							<td colspan="4" align="right">Grand Total</td>
							<td><%= p_total %></td>
						</tr>
					</table>
				</div>
				<div class="card-footer">
				</div>
			</div>
		</div>
	</div>
</div>