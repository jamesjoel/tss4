<html ng-app="myApp" ng-controller="myCtrl">
<head>
	<title></title>
	<link rel="stylesheet" type="text/css" href="css/bootstrap.css">
	<link rel="stylesheet" type="text/css" href="css/font-awesome.min.css">
	<script type="text/javascript" src="js/jquery.js"></script>
	<script type="text/javascript" src="js/bootstrap.bundle.js"></script>
	<script type="text/javascript" src="js/angular.js"></script>

	<script type="text/javascript" src="js/app.js"></script>

</head>
<body ng-init="getAllData()">
	<div class="jumbotron">
		<h2>The Stepping Stone</h2>
		<button class="btn btn-primary" data-toggle="modal" data-target="#addModal">Add</button>
	</div>
	<div class="container">
		<div class="row">
			<div class="col-md-8 offset-md-2">
				<table class="table table-hover table-bordered table-dark">
					<tr>
						<th>S.No.</th>
						<th>Employee Name</th>
						<th>Age</th>
						<th>Salary</th>
					</tr>
					<tr ng-repeat="x in allData">
						<td ng-bind="$index+1"></td>
						<td ng-bind="x.name"></td>
						<td ng-bind="x.age"></td>
						<td ng-bind="x.salary"></td>
					</tr>



				</table>
			</div>
		</div>
	</div>

	<div class="modal fade" id="addModal">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h3>Add New Employee</h3>

				</div>
				<div class="modal-body">
					<pre ng-bind="newData|json"></pre>
					<div class="form-group">
						<label>Full Name</label>
						<input type="text" placeholder="Full Name" class="form-control" ng-model="newData.name">
					</div>
					<div class="form-group">
						<label>Age</label>
						<input type="text" placeholder="Age" class="form-control" ng-model="newData.age">
					</div>
					<div class="form-group">
						<label>Salary</label>
						<input type="text" placeholder="Salary" class="form-control" ng-model="newData.salary">
					</div>
				</div>
				<div class="modal-footer">
					<button class="btn btn-success" ng-click="add()">Add</button>
					<button class="btn btn-danger" data-dismiss="modal">Close</button>
				</div>
			</div>
		</div>
	</div>





</body>
</html>